---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<header class="">
  <h1 class="text-base text-primary">{t("home.greeting")}</h1>
  <h2
    class="text-5xl font-bold tracking-tight dark:text-slate-200 text-slate-800"
  >
    <a href="/">{t("home.name")}</a>
  </h2>
  <h3
    class="mt-3 text-5xl font-bold tracking-tight dark:text-gray-400 text-gray-500"
  >
    {t("home.title")}
  </h3>
  <p class="mt-4 leading-normal dark:text-gray-400 text-gray-500 text-base">
    {t("home.description")}
  </p>
</header>
