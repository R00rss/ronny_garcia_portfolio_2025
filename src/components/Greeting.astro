---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<header class="mb-3 sm:mb-0">
  <h1 class="text-base text-primary -rotate-6 origin-center w-max -translate-x-4 translate-y-1">{t("home.greeting")}</h1>
  <h2
    class="text-6xl font-semibold tracking-tight dark:text-slate-200 text-slate-800"
  >
    <a href="/">{t("home.name")}</a>
  </h2>
  <h3
    class="mt-3 text-lg font-medium tracking-tight dark:text-gray-300 text-gray-500"
  >
    {t("home.title")}
  </h3>
  <p class="mt-2 sm:max-w-60 md:max-w-xs leading-normal dark:text-gray-400 text-gray-500 text-base">
    {t("home.description")}
  </p>
</header>
