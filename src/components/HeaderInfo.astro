---
const name = "Ronny García.";
const title = "I build things for the web.";
const description =
  "I’m a software engineer specializing in building (and occasionally designing) exceptional digital experiences. Currently, I’m focused on building accessible, human-centered products";

const current_job = "Moderna Alimentos";
const current_job_link = "https://modernaalimentos.com.ec/";
---

<header class="max-w-xl">
  <h1 class="text-sm font-normal mb-3 tracking-tight text-primary">
    Hi, my name is
  </h1>
  <h2 class="text-5xl font-bold tracking-tight text-slate-200">
    <a href="/">{name}</a>
  </h2>
  <h3 class="mt-3 text-5xl font-bold tracking-tight text-gray-400">
    {title}
  </h3>
  <p class="mt-4 leading-normal text-gray-400">
    {description} at <a
      class="text-primary"
      href={current_job_link}
      target="_blank"
      rel="noreferrer noopener">{current_job}</a
    >
  </p>
</header>
